
<!-- This calls the header fromt he partials folder -->
<%- include('partials/header.ejs'); -%>


<main class="addcnt">

    <!-- This is the header section that contains the name of the web page and a brief explenation on how it works -->
    <div class="intro">
        <h1>ADD YOUR NEW BOOK</h1>
        <p>To add a book the user must enter the required information and can search for the books ISBN on the following link:</p>
        <button class="btn btnC"><a href="https://openlibrary.org/dev/docs/api/covers ">Click Here</a></button>
        <a href="https://openlibrary.org/dev/docs/api/covers "></a>
    </div>

    <!-- This form allows the user to add a new book to their list -->
    <form method="post">
        <div class="row">
            <div class="col-lg">
                <label class="form-label" for="addForm">Name of the Book </label>
                <input type="text" name="bookName" >
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg">
                <label class="form-label" for="addForm">Name of the Author:</label>
                <input type="text" name="author">
            </div>
        </div>

        <div class="row">
            <div class="col-lg">
                <label class="form-label" for="addForm">Genre: </label>
                <input type="text" name="genre">
            </div>
        </div>

        <div class="row">
            <div class="col-lg">
                <label class="form-label" for="addForm">ISBN: </label>
                <input type="text" name="isbn">
            </div>
        </div>

        <div class="row">
            <div class="col-lg">
                <label class="form-label" for="addForm">Year the Book was Read:  </label>
                <input type="text" name="yearread">
            </div>
        </div>

        <div class="row">
            <div class="col-lg">
                <label class="form-label" for="addForm">Rating:  </label>
                <input type="text" name="rating">
            </div>
        </div>

        <div class="row">
            <div class="col-lg">
                <label class="form-label" for="addForm">Description: </label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
            </div>
        </div>

        
    <button id="addbtn" class="btn btnC" type="submit" name="list"> Add Book</button>
    </form>
</main>
<footer class="py-3 my-4">
    <p class="text-center text-body-secondary">Copyright Â© <%= new Date().getFullYear() %></p>
</footer>
</body>
</html>